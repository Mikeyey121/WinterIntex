@{
}
@model IEnumerable<string>



<form method="get" asp-controller="Home" asp-action="Products">
    <select name="color" onchange="this.form.submit()" class="form-select">
        <option value="">Select a Color</option>
        @foreach (string pt in Model ?? Enumerable.Empty<string>())
        {
            @if (ViewBag.SelectedColor == pt)
            {
                <option value="@pt" selected="selected">@pt</option>
            }
            else
            {
                <option value="@pt">@pt</option>
            }
        }
    </select>
    <input type="hidden" name="pageNum" value="1" />
</form>
