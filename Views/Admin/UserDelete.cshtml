}
@model UserDeleteViewModel

<!-- Confirmation question with yes and no buttons -->
<h2>Are you sure you want to delete @Model.UserName?</h2>
<form asp-controller="Admin" asp-action="UserDeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes</button>
</form>
    <a asp-action="ListUsers" class="btn btn-primary">No</a>