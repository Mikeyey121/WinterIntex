<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WinterIntex</title>
    <link href="https://fonts.googleapis.com/css2?family=Jomhuria&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WinterIntex.styles.css" asp-append-version="true" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />

</head>
<body>
<div class="bg-info text-white p-2">
    <span class="navbar-brand ml-2">LEGO Store Administration</span>
</div>
<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3">
            <div class="d-grid gap-1">
                <a asp-area="" asp-controller="Admin" asp-action="Products" class="btn btn-outline-primary"
                   ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Products</a>
                <a asp-area="" asp-controller="Admin" asp-action="Orders" class="btn btn-outline-primary"
                   ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Orders</a>
                    <a asp-area="" asp-controller="Admin" asp-action="ListUsers" class="btn btn-outline-primary"
                   ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Users</a>
            </div>
        </div>
        <div class="col">
            @RenderBody()
        </div>
    </div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Aurora's LEGO Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        @if (User.IsInRole("Admin"))
        {
            <div>
                - <a asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
            </div>
        }
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>