<!-- Website home page -->

@model WinterIntex.Models.ViewModels.UserRecommendationsViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero div -->
<div>
    <div class="container">
        <div class="row m-1 p-1 align-items-center">
            <div class="col-md-12 text-center text-md-start">
                <br />
                <h1 class="fw-bold" style="font-size: 4.5vw;margin-left:20%;margin-right:20%;width:60%;">AURORA'S LEGO SHOP</h1>
                <div class="col-md-7 text-center" style="font-size: 4.5vw;margin-left:20%;margin-right:20%;width:60%;>
                    <br class="d-md-none">
                    <img src="~/img/sanfran-removebg-preview.png" alt="LEGO San Fransisco" class="img-fluid text-center" style="max-width: 100%;">
                </div>
                <br />
                <div class="text-center">
                    <button asp-controller="Home" asp-action="Products" class="btn-primary" style="font-size: 1.8vw; width: 250px">Shop Now</button>
                </div>
                <br />
            </div>
        </div>

    </div>
</div>

<br />

<!-- Recommendations div -->
<div class="text-center" style="height:450px">
    @if (User.Identity.IsAuthenticated)
    {
        <h3>Aurora's Recommendations for You!</h3>
        <br />
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="scrollable-cards-container">
                    <div class="scrollable-cards-row" >
                        @foreach (var recProduct in Model.RecommendedProducts)
                        {
                            <div class="col-md-3">
                                <partial name="ProductSummary" model="recProduct" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h3>My Favorite Sets</h3>
        <br />
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="scrollable-cards-container">
                    <div class="scrollable-cards-row" style="height:450px;width:1500px">
                        @foreach (var recProduct in Model.RecommendedProducts)
                        {
                            <div class="col-md-3">
                                <partial name="ProductSummary" model="recProduct" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
