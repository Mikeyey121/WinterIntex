@{
    ViewData["Title"] = "Home Page";
}

<div class="container" style="background-color: black;">
    <div class="row m-1 p-1" style="height: 400px; width: auto;">
        <div class="col-5">
            <br />
            <h1 style="font-size: 70px; color: white;">Welcome to Aurora's LEGO Shop</h1>
            <h4 style="font-size: 28px; color: white;">With new arrivals coming to you all summer long</h4>
            <br />
            <div style="display: flex; justify-content: center;">
                <a asp-controller="Home" asp-action="Products" class="btn btn-primary" style="color: black; background-color: white; font-size: 30px; border-radius: 10px; font-family: 'Saira Condensed', sans-serif;">Shop Now</a>
                <br />
            </div>
        </div>
        <div class="col-7">
            <div style="text-align: center;">
                <br />
                <img src="~/img/giphy (1).gif" alt="LEGO Batman gif" style="width: 600px; height: auto;">
            </div>
        </div>
    </div>
</div>

